@page
@model HW20.Presentation.RazorPages.Pages.Request.GetImagesModel
@{
}
<style>
    .image-gallery {
        display: flex;
        flex-wrap: wrap;
        gap: 25px;
        padding: 10px;
    }

    .image-gallery img {
        width: 400px;
        height: 400px;
        object-fit: cover;
        border-radius: 10px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.2);
        transition: transform 0.2s ease;
    }

    .image-gallery img:hover {
        transform: scale(1.05);
    }
</style>

<div class="image-gallery">
    @foreach (var item in Model.ImagePaths)
    {
        <img src="@item"/>
    }
</div>